{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",        
        "lib": ["dom", "ES2020"],           
        "skipLibCheck": true,

        "moduleResolution": "node",  
        "noEmit": false,   

        "esModuleInterop": true,  
        "outDir": "./dist",  
    
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,            
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
